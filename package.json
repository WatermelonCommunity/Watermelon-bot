{
    "name": "watermelon-bot",
    "version": "2.0.0",
    "description": "Official Bot of Watermelon Code.",
    "main": "dist/app.js",
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint --ext .js,.ts src",
        "format": "npx prettier --write .",
        "build": "tsc && copy .env dist",
        "build:linux": "tsc && cp .env dist",
        "start": "tsc && copy .env dist && cd dist && node ./app.js",
        "deploy": "copy .env dist && cd dist && node ./deploy.js",
        "dev": "copy .env dist && cd dist && npx nodemon ./app.js",
        "dev:linux": "npm run build:linux && cd dist && npx nodemon ./app.js",
        "prepare": "husky install"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/WatermelonCommunity/Watermelon-bot.git"
    },
    "author": "WatermelonCommunity",
    "license": "GPL-3.0",
    "bugs": {
        "url": "https://github.com/WatermelonCommunity/Watermelon-bot/issues"
    },
    "homepage": "https://github.com/WatermelonCommunity/Watermelon-bot#readme",
    "dependencies": {
        "@discordjs/builders": "^0.11.0",
        "@discordjs/rest": "^0.2.0-canary.0",
        "discord-api-types": "^0.26.1",
        "discord.js": "^13.5.0",
        "graceful-fs": "^4.2.9",
        "moment": "^2.29.1"
    },
    "devDependencies": {
        "@types/graceful-fs": "^4.1.5",
        "@types/node": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.9.0",
        "@typescript-eslint/parser": "^5.9.0",
        "dotenv": "^10.0.0",
        "eslint": "^7.32.0",
        "eslint-config-prettier": "^8.3.0",
        "eslint-config-standard": "^16.0.3",
        "eslint-plugin-import": "^2.25.4",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-promise": "^5.2.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.1.7",
        "nodemon": "^2.0.15",
        "ts-node": "^10.4.0",
        "typescript": "^4.5.4"
    },
    "lint-staged": {
        "*.{js,ts}": "eslint --cache --fix",
        "pretteir": "prettier --write ."
    }
}
